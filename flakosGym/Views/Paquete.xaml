<Window x:Class="flakosGym.Views.Paquete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:flakosGym.Views"
      mc:Ignorable="d"
      Title="Paquete" Height="700" Width="800">
    <Border CornerRadius="15">
        <Border CornerRadius="10" BorderThickness="5" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0" />
                    <GradientStop Color="#ed742f" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#26247f" Offset="0" />
                    <GradientStop Color="#5351cc" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="590"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Flakos Gym"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="BtnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="19"
                            FontFamily="Monstserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Monstserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="BtnClose_OnClick">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ef4545" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ef5d5d"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="700"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0"
                           Grid.Column="1"
                           Source="/Images/perfil.png"
                           Width="140"
                           Height="140"
                           Opacity="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Armando Portillo"
                               Grid.Row="1"
                               Grid.Column="1"
                               Foreground="White"
                               FontSize="50"
                               FontFamily="montserrat"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Separator Grid.Column="1"
                               Grid.Row="2"
                               Background="#ed742f"/>

                    <TextBlock Text="Paquete"
                               Grid.Row="3"
                               Grid.Column="1"
                               Foreground="White"
                               FontSize="25"
                               FontFamily="montserrat"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Separator Grid.Column="1"
                               Grid.Row="4"
                               Background="#ed742f"/>

                    <TextBlock Text="Sucursal XXXXXXXXX"
                               Grid.Row="5"
                               Grid.Column="1"
                               Foreground="White"
                               FontSize="25"
                               FontFamily="montserrat"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Separator Grid.Column="1"
                               Grid.Row="6"
                               Background="#ed742f"/>

                    <TextBlock Text="Mensualidad vigente hasta 15/09/24"
                               Grid.Row="7"
                               Grid.Column="1"
                               Foreground="White"
                               FontSize="25"
                               FontFamily="montserrat"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Button x:Name="btnGuardarDatos"
                        BorderThickness="0"
                        Content="Agregar datos"
                        Foreground="White"
                        FontSize="20"
                        FontFamily="Monstserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Grid.Row="8"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="btnPagarAhora">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ed742f" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#b75014"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="175" Height="35"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </Grid>

                <Grid Background="#351E99" Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Home"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    
                    <Image Grid.Row="1"
                               Grid.Column="0"
                               Source="/Images/home.png"
                               Width="30"
                               Height="30"
                               Opacity="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Rutinas"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    
                    <Image Grid.Row="1"
                               Grid.Column="1"
                               Source="/Images/dumbbell.png"
                               Width="50"
                               Height="30"
                               Opacity="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Yo"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   Grid.Column="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    
                    <Image Grid.Row="1"
                               Grid.Column="2"
                               Source="/Images/person.png"
                               Width="50"
                               Height="30"
                               Opacity="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
